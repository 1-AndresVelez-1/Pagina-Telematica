<!-- principal/Componentes.hbs -->

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de Búsqueda</title>
</head>
<body>

    <h1>Resultados de Búsqueda</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Precio</th>
                <th>Enlace</th>
            </tr>
        </thead>
        <tbody>
            {{#if componentPrice}}
                <tr>
                    <td>{{componentPrice}}</td>
                    <td><a href="{{componentLink}}" target="_blank">Ver Detalles</a></td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="2">No se encontraron resultados.</td>
                </tr>
            {{/if}}
        </tbody>
    </table>

</body>
</html>